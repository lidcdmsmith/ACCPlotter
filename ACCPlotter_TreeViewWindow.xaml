<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="ACCPlotter.ACCPlotterFolderTreeViewWindow"
        
        Title="Tool Setup" 
        MinHeight="400" 
        MinWidth="600" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="CanResizeWithGrip">
    
    <DockPanel Margin="5">
        <DockPanel DockPanel.Dock="Top" Height="200" Margin="5">
            <ListBox 
                DockPanel.Dock="Top" 
                Name="FolderListBox" 
                MinHeight="150" 
                Margin="5,5,5,5"
                ScrollViewer.HorizontalScrollBarVisibility="Visible"
                ScrollViewer.VerticalScrollBarVisibility="Visible"/>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="5,5,5,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="80"/>
                        <ColumnDefinition MinWidth="80"/>
                        <ColumnDefinition MinWidth="80"/>
                        <ColumnDefinition MinWidth="80"/>
                        <ColumnDefinition MinWidth="80"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Add" Grid.Column="0" HorizontalAlignment="Stretch" Margin="2.5"/>
                    <Button Content="Remove" Grid.Column="1" HorizontalAlignment="Stretch" Margin="2.5"/>
                    <Button Content="Clear All" Grid.Column="2" HorizontalAlignment="Stretch" Margin="2.5"/>
                    <Button Content="Import" Grid.Column="3" HorizontalAlignment="Stretch" Margin="2.5"/>
                    <Button Content="Export" Grid.Column="4" HorizontalAlignment="Stretch" Margin="2.5"/>
                </Grid>
            </StackPanel>
        </DockPanel>

        
        <DockPanel DockPanel.Dock="Bottom" Height="200" Margin="5">
            <ListBox 
                DockPanel.Dock="Top" 
                Name="PlotListBox" 
                MinHeight="150" 
                Margin="5,5,5,5"
                ScrollViewer.HorizontalScrollBarVisibility="Visible"
                ScrollViewer.VerticalScrollBarVisibility="Visible"/>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="5,5,5,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="80"/>
                        <ColumnDefinition MinWidth="80"/>
                        <ColumnDefinition MinWidth="80"/>
                        <ColumnDefinition MinWidth="80"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Add" Grid.Column="0" HorizontalAlignment="Stretch" Margin="2.5"/>
                    <Button Content="Remove" Grid.Column="1" HorizontalAlignment="Stretch" Margin="2.5" Click=""/>
                    <Button Content="Proceed" Grid.Column="2" HorizontalAlignment="Stretch" Margin="2.5" IsEnabled="False"/>
                    <Button Content="Cancel" Grid.Column="3" HorizontalAlignment="Stretch" Margin="2.5"/>
                </Grid>
            </StackPanel>
        </DockPanel>
    </DockPanel>


</Window>